{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@c/*": ["./src/components/*"],
      "@cfg/*": ["./src/config/*"],
      "@i/*": ["./src/interfaces/*"],
      "@p/*": ["./src/pages/*"],
      "@a/*": ["./src/api/*"],
      "@a/i/*": ["./src/api/interfaces/*"]
    }
  },
  "include": ["src", "cypress"],
}
